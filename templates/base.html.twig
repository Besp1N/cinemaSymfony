<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Wszystko encore_entry_link_tags oprocz fontawesome wywalamy #}
        {{ encore_entry_link_tags('fontawesome') }}
        {% block stylesheets %}
{#            {{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
{#            {{ encore_entry_script_tags('app') }}#}
{% block importmap %}{{ importmap('app') }}{% endblock %}

        {% endblock %}
    </head>
    <body>
    <div class="overlay hidden"></div>
    <div class="modal hidden">
        <button class="btn-close-modal"><i class="fas fa-close fa-2x"></i></button>
        <div id="modal-content">

        </div>
    </div>
    {{ render(controller('App\\Controller\\NavFragmentController::index')) }}
        <main class="container" style="margin-top: 2rem">
            {% for type in app.flashes %}
                {% for flash in type %}
                    <h2>{{ flash }}</h2>
                    {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>

    </body>
</html>
